@model LoginViewModel

<div class="col-md-4 mx-auto">
    <form method="post" asp-controller="Accounts" asp-action="Login">
        <h3 class="h3 mb-3 fw-normal">Войдите в систему</h3>
        <p></p>
        <div class="form-floating">
            <input class="form-control" asp-for="UserName">
            <label for="floatingInput">Логин</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <p></p>
        <div class="form-floating">
            <input asp-for="Password" class="form-control">
            <label for="floatingPassword">Пароль</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <p></p>
        <div class="checkbox mb-3 ">
            <label>
                <input asp-for="RememberMe"> Запомнить меня
            </label>
        </div>
        <button class="btn btn-outline-secondary btn-lg btn-block" type="submit">Войти</button>
    </form>
</div>
