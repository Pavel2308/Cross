@model Cross.Web.Models.Cars.EditViewModel



<div class="col-md-4 mx-auto">
    <h3>Добавить автомобиль</h3>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <label asp-for="LicensePlate" class="control-label"></label>
            <input asp-for="LicensePlate" class="form-control" />
            <span asp-validation-for="LicensePlate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RaceTypeId" class="control-label"></label>
            <select asp-for="RaceTypeId" class="form-control" asp-items="ViewBag.RaceTypeId"></select>
            <span asp-validation-for="RaceTypeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DisciplineId" class="control-label"></label>
            <select asp-for="DisciplineId" class="form-control" asp-items="ViewBag.DisciplineId"></select>
            <span asp-validation-for="DisciplineId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
