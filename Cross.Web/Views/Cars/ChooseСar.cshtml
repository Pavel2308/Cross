@model Cross.Web.Models.Cars.ChooseСarViewModel
@{
    ViewData["Title"] = "Details";
}

<div align="center">
    <div class="col-md-4 mx-auto">
        <h3>Выберите парковочное место</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Cars.FirstOrDefault().LicensePlate)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cars)
                {
                    <tr>
                        <td>@item.LicensePlate</td>
                        <td>
                            <a class="btn btn-outline-secondary" asp-controller="Requests" asp-action="Create" asp-route-carId="@item.Id" asp-route-raceId="@Model.RaceId" asp-route-actionId="@Model.ActionId">Выбрать</a><br />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
